<resources>
    <color name="primary_light">#3B7F5E</color>
    <color name="primary">#56BA89</color>
    <color name="primary_dark">#3B7F5E</color>
    <color name="accent_light">#EEF8FC</color>
    <color name="accent">#CFD8DC</color>
    <color name="accent_dark">#787D7F</color>
    <color name="alert_bad">#D50000</color>
    <color name="alert_good">#64DD17</color>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="PortfolioButton" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="CapstoneButton" parent="PortfolioButton">
        <item name="android:background">@color/alert_good</item>
    </style>

</resources>
